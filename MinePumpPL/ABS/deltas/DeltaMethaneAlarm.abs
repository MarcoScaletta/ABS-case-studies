delta DeltaMethaneAlarm{

    modifies MinePump {

        /*@
          @ ensures (systemActive && pumpRunning && isMethaneAlarm()) ==> !pumpRunning;
          @ */
        modifies Unit timeShift() {
			if (systemActive && pumpRunning && isMethaneAlarm()) {
			    deactivatePump();
		    } else {
			    original();
		    }
        }
    }
}